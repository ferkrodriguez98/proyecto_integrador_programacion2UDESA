</head>
<body class="bg-gray-300 flex flex-col h-screen justify-between">
   <%- include('./common/header.ejs') %>
   <div class="w-full border-b-8">
      <h1 class="py-6 text-center text-4xl">
         Most Popular
      </h1>
      <div id="populares" class="w-10/12 flex mx-auto pb-6">

      </div>
   </div>
   <div class="w-full">
      <h1 class="py-6 text-center text-4xl">
         Top Rated
      </h1>
      <div id="top-rated" class="w-10/12 flex mx-auto pb-6">

      </div>
   </div>
   <div class="w-full pb-12">
      <h1 class="py-6 text-center text-4xl">
         Airing
      </h1>
      <div id="airing" class="w-10/12 flex mx-auto pb-6">

      </div>
   </div>
   <%- include('./common/footer.ejs') %>
</body>
</html>
<script src="../public/js/index.js"></script>
<script>
      function avoidSpace(event) {
         var j = event ? event.which : window.event.keyCode;
         if (j == 32) return false;
      }

      //  function avoidSomeChars(event) {
